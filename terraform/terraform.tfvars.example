# YugabyteDB Infrastructure - Example Variables
# Copy this file to terraform.tfvars and update with your actual values

project_id = "your-gcp-project-id"
region     = "us-central1"

vpc_name    = "yugabyte-secure-vpc"
subnet_name = "yugabyte-subnet-us-central1"
subnet_cidr = "10.0.1.0/24"

pods_cidr     = "10.1.0.0/16"
services_cidr = "10.2.0.0/16"
master_cidr   = "172.16.0.0/28"

cluster_name = "yugabyte-cluster"

min_cpu    = 10
max_cpu    = 100
min_memory = 40
max_memory = 400

general_machine_type = "e2-standard-4"
general_min_nodes   = 1
general_max_nodes   = 10

tserver_machine_type = "n2-highmem-4"
tserver_min_nodes   = 0
tserver_max_nodes   = 15

environment = "prod"

labels = {
  managed-by = "terraform"
  project    = "yugabytedb-deployment"
  team       = "devops"
}

backup_enabled        = true
backup_retention_days = 30

monitoring_enabled = true
logging_enabled    = true

enable_binary_authorization = true
enable_network_policy      = true
enable_private_nodes       = true
enable_workload_identity   = true

maintenance_start_time = "2023-01-01T02:00:00Z"
maintenance_end_time   = "2023-01-01T06:00:00Z"
maintenance_recurrence = "FREQ=WEEKLY;BYDAY=SA" 